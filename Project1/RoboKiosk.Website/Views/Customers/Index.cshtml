@model IEnumerable<CustomerViewModel>


@{
    ViewData["Title"] = "Index";
}


<h1>Customer List</h1>

<p>
    <a asp-action="Create">New Customer</a>
    
</p>
<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Enter Phone Here" title="Type in the Customer's Phone" style="color:white">
    <table class="table" id="myTable" style="background-color: black; color: white; ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LName)
                    </td>
                    <td style="color:black">
                        @Html.DisplayFor(modelItem => item.CustId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CustNum">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CustNum">Details</a> |
                        @*<a asp-action="Delete" asp-route-id="@item.CustNum">Delete</a>*@

                    </td>
                </tr>
            }

            <script>
                function myFunction() {

                    var input, filter, table, tr, td, i, txtValue;

                    input = document.getElementById("myInput");

                    filter = input.value.toUpperCase();

                    table = document.getElementById("myTable");

                    tr = table.getElementsByTagName("tr");

                    for (i = 0; i < tr.length; i++) {
                        td = tr[i].getElementsByTagName("td")[0];
                        if (td) {
                            txtValue = td.textContent || td.innerText;

                            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                                tr[i].style.display = "";
                            }
                            else {
                                tr[i].style.display = "none";
                            }
                        }
                    }
                }
            </script>
        </tbody>
    </table>

