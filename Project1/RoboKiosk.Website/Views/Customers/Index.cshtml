@model IEnumerable<CustomerViewModel>


@{
    ViewData["Title"] = "Index";
}


<h1>Customer List</h1>

<p>
    <a asp-action="Create">New Customer</a>
    
</p>

    <table class="table" style="background-color: black; color: white; ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNum)
                    </td>
                    <td style="color:black">
                        @Html.DisplayFor(modelItem => item.CustId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CustNum">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CustNum">Details</a> |
                        @*<a asp-action="Delete" asp-route-id="@item.CustNum">Delete</a>*@

                    </td>
                </tr>
            }
        </tbody>
    </table>

